<% content_for :title do %>
Faça o upload do seu Inventário
<% end %>

<div class="columns" data-controller="product-upload">
  <div class="column">
    <% if flash[:alert] %>
    <div class="notification is-danger"><%= flash[:alert] %></div>
    <% end %>

    <%= form_with model: @product_upload, local: true do |form| %>
    <div class="field">
      <div class="control">
        <div class="file has-name">
          <label class="file-label">
            <%= form.file_field :file, class: 'file-input',
                                  data: {
                                    action: 'change->product-upload#showFilename',
                                    target: 'product-upload.fileInput'
                                  } %>


            <span class="file-cta">
              <span class="file-icon">
                <i class="fas fa-upload"></i>
              </span>
              <span class="file-label">
                Selecione o arquivo…
              </span>
            </span>
            <span class="file-name" data-target="product-upload.filename">
            </span>
          </label>
        </div>
      </div>
    </div>


    <div class="field">
      <div class="control">
        <%= form.submit 'Upload', class: 'button is-primary', data: { target: 'product-upload.uploadButton' }, disabled: true %>
      </div>
    </div>
    <% end %>
  </div>
</div>